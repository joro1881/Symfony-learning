{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel-body">
        <form name="authenticate" action="{{ path('security_login') }}" method="post">
            Username: <input type="text" name="_username">
            Password : <input type="password" name="_password">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/><br>
            <input type="submit" value="Login">
        </form>
    </div>
{% endblock %}